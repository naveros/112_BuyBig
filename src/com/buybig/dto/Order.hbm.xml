<?xml version="1.0"
      encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.buybig.dto.Order" table="ORDERS">
         <id name="idOrder"
             type="string">
             <column name="IDORDER">
             </column>
             <generator class="sequence">
                        <param name="sequence">SEQ_ID_ORDER</param>
             </generator>
         </id>

         <property name="dateAdded"
                   type="timestamp">
                   <column name="DATEADDED">
                   </column>
         </property>
         
         <many-to-one name="User"
                      class="com.buybig.dto.User"
                      not-null="true">
                      <column name="IDUSER">
                      </column>
         </many-to-one>
         <many-to-one name="Book"
                      class="com.buybig.dto.Book"
                      not-null="true">
                      <column name="IDBOOK">
                      </column>
         </many-to-one>
  </class>
</hibernate-mapping>
