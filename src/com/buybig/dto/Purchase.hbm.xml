<?xml version="1.0"
      encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
  <class name="com.buybig.dto.Purchase"
         table="PURCHASE">
         <id name="idPurchase"
             type="string">
             <column name="IDPURCHASE">
             </column>
             <generator class="sequence">
                        <param name="sequence">SEQ_ID_PURCHASE</param>
             </generator>
         </id>

         <property name="purchaseDate"
                   type="timestamp">
                   <column name="PURCHASEDATE">
                   </column>
         </property>
         
         <many-to-one name="user"
                      class="com.buybig.dto.User"
                      not-null="true">
                      <column name="IDUSER">
                      </column>
         </many-to-one>
         <many-to-one name="book"
                      class="com.buybig.dto.Book"
                      not-null="true">
                      <column name="IDBOOK">
                      </column>
         </many-to-one>
  </class>
</hibernate-mapping>