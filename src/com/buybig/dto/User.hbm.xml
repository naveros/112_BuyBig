<?xml version="1.0"
      encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
	<class name="com.buybig.dto.User" table="USERS">
		<id name="idUser" type="string">
			<column name="IDUSER">
			</column>
			<generator class="sequence">
				<param name="sequence">SEQ_ID_USER</param>
			</generator>
		</id>

		<property name="userName" type="string" length="100">
			<column name="USERNAME">
			</column>
		</property>

		<property name="firstName" type="string" length="100">
			<column name="FIRSTNAME">
			</column>
		</property>

		<property name="adresse" type="string" length="100">
			<column name="ADRESSE">
			</column>
		</property>
        <property name="birthDate"
                   type="timestamp">
                   <column name="BIRTHDATE">
                   </column>
         </property>


		<set name="purchaseHistory" order-by="PURCHASEDATE ASC" cascade="all">
			<key>
				<column name="IDUSER">
				</column>
			</key>
			<one-to-many class="com.buybig.dto.Purchase" />
		</set>
		<set name="cart" order-by="DATEADDED ASC" cascade="all">
			<key>
				<column name="IDBOOK">
				</column>
			</key>
			<one-to-many class="com.buybig.dto.Order" />
		</set>
	</class>
</hibernate-mapping>