<?xml version="1.0"
      encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<!--
   - UserDTO mapping file.
   -
   - Author: Gilles Benichou
-->

<hibernate-mapping>
  <class name="ca.qc.collegeahuntsic.bibliothequeBackEnd.dto.UserDTO"
         table="User">
         <id name="idUser"
             type="string">
             <column name="IDUser">
             </column>
             <generator class="sequence">
                        <param name="sequence">SEQ_ID_User</param>
             </generator>
         </id>

         <property name="userName"
                   type="string"
                   length="100">
                   <column name="USERNAME">
                   </column>
         </property>
                  <property name="firstName"
                   type="string"
                   length="100">
                   <column name="USERNAME">
                   </column>
         </property>


         <set name="purchaseHistory"
              order-by="PURCHASEDATE ASC"
              cascade="all">
              <key>
                <column name="IDUser">
                </column>
              </key>
              <one-to-many class="com.buybig.dto.purchase"/>
         </set>
         <set name="cart"
              order-by="DATEADDED ASC"
              cascade="all">
              <key>
                <column name="IDUser">
                </column>
              </key>
              <one-to-many class="com.buybig.dto.order"/>
         </set>
  </class>
</hibernate-mapping>